#Main.java
import android.os.Bundle;
import android.util.Patterns;
import android.view.View;
import android.widget.ArrayAdapter;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Spinner;
import android.widget.TextView;
import android.widget.Toast;

import androidx.appcompat.app.AppCompatActivity;

import java.util.Arrays;
import java.util.List;

public class MainActivity extends AppCompatActivity {

    EditText etName, etEmail;
    Spinner spinnerGender;
    Button btnRegister;
    TextView tvResult;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        etName = findViewById(R.id.etName);
        etEmail = findViewById(R.id.etEmail);
        spinnerGender = findViewById(R.id.spinnerGender);
        btnRegister = findViewById(R.id.btnRegister);
        tvResult = findViewById(R.id.tvResult);

        // Simple gender list with a prompt item
        List<String> genders = Arrays.asList("Select gender", "Male", "Female", "Other");
        ArrayAdapter<String> adapter = new ArrayAdapter<>(
                this, android.R.layout.simple_spinner_item, genders
        );
        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
        spinnerGender.setAdapter(adapter);

        btnRegister.setOnClickListener(v -> validateAndShow());
    }

    private void validateAndShow() {
        String name = etName.getText().toString().trim();
        String email = etEmail.getText().toString().trim();
        String gender = spinnerGender.getSelectedItem() == null
                ? "" : spinnerGender.getSelectedItem().toString();

        boolean ok = true;

        if (name.isEmpty()) {
            etName.setError("Name required");
            ok = false;
        } else {
            etName.setError(null);
        }

        if (email.isEmpty()) {
            etEmail.setError("Email required");
            ok = false;
        } else if (!Patterns.EMAIL_ADDRESS.matcher(email).matches()) {
            etEmail.setError("Invalid email");
            ok = false;
        } else {
            etEmail.setError(null);
        }

        if (gender.equals("Select gender")) {
            Toast.makeText(this, "Please select a gender", Toast.LENGTH_SHORT).show();
            ok = false;
        }

        if (!ok) {
            tvResult.setVisibility(View.GONE);
            return;
        }

        String result = "Name: " + name + "\nEmail: " + email + "\nGender: " + gender;
        tvResult.setText(result);
        tvResult.setVisibility(View.VISIBLE);
    }
}
